\keys_define:nn { braun/problems/choices }
    {
        incr .fp_set:N  = \l_braun_choices_incr_fp,
        incr .initial:n = 1.5,

        log .bool_set:N = \l_braun_choices_log_bool,
        log .initial:n  = false,
        log .default:n  = true,
    }

\NewDocumentCommand \AutoChoicesNum { m }
    {
        \group_begin:
            \int_set:Nn \l_tmpa_int { \int_rand:n {5} }

            \bool_if:NT \l_braun_choices_log_bool 
                {
                    \fp_set:Nn \l_braun_choices_incr_fp 
                        {
                            10 ^ ( \l_braun_choices_incr_fp - 1 )
                        }
                }

            \fp_set:Nn  \l_tmpa_fp  { #1 / ( \l_braun_choices_incr_fp ^ (\l_tmpa_int - 1) ) }

            \clist_clear:N \l_tmpa_clist
            \int_step_inline:nn {5}
                {
                    \clist_put_right:Nx \l_tmpa_clist 
                        { 
                            \num { \fp_eval:n { ( \l_tmpa_fp * ( \l_braun_choices_incr_fp ^ (##1 - 1) ) ) } } 
                        }
                }

            \exp_args:Nnne \braun_task_list:nnn
                { choices }
                { 3 }
                { \clist_use:Nn \l_tmpa_clist {\item} }
        \group_end:
    }

\cs_set:Nn \braun_task_list:nnn { \begin{#1}(#2) \item #3 \end{#1} }

