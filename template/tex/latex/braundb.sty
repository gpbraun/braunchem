            %% TASKS LIST
            \int_compare:nNnTF { \seq_count:N \l_tmpa_seq } > {1}
                {
                    \exp_args:Nnx \begin { tasks }
                    {
                        \exp_not:N \item \seq_use:Nn \l_tmpa_seq { \item }
                    }
                    \end { tasks }
                }
                {#1}
        \group_end:
    }

